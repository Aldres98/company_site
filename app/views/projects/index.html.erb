<!doctype html>
<head>
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
</head>
<body>
<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <h2 class="top-text-index_page">Our latest sites</h2>
    </div>
    <% @projects.each do |p| %>
    <div class="col-xs-4">
      <div class="imgWrap">
        <%= link_to p do %>
        <%= image_tag "project-bg.png", class: "img-responsive project_image" %>
        <% end %>
        <div class="itemInfo clearfix">
          <div class="title">
            <%= link_to p do %>
            <% p.title %>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <% end %>
    </div>
  </div>

</body>
</html>
